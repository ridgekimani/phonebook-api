{
  "name": "phonebook-api",
  "version": "1.0.0",
  "description": "phone book api",
  "main": "index.js",
  "scripts": {
    "test": "jest --forceExit --coverage --verbose",
    "watch-ts": "tsc -w",
    "start": "yarn serve",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "build": "rm -rf dist && yarn tsc",
    "prettier-watch": "onchange '**/*.ts' -- prettier --write {{changed}}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ridgekimani/phonebook-api.git"
  },
  "keywords": [
    "phonebook",
    "express"
  ],
  "author": "Ridge Kimani",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ridgekimani/phonebook-api/issues"
  },
  "homepage": "https://github.com/ridgekimani/phonebook-api#readme",
  "dependencies": {
    "bcrypt": "^3.0.1",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "joi": "^13.6.0",
    "jsonwebtoken": "^8.3.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^4.38.1",
    "sequelize-typescript": "^0.6.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/joi": "^13.4.5",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/supertest": "^2.0.6",
    "errorhandler": "^1.5.0",
    "husky": "^1.0.0-rc.14",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0",
    "sequelize-cli": "^4.1.1",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
